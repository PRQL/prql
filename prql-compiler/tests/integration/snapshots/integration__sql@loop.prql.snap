WITH RECURSIVE table_5 AS (
  SELECT
    1 AS n
),
table_3 AS (
  SELECT
    n - 2 AS _expr_0
  FROM
    table_5 AS table_1
  UNION
  ALL
  SELECT
    _expr_0 + 1
  FROM
    table_3 AS table_2
  WHERE
    _expr_0 < 4
)
SELECT
  _expr_0 * 2 AS n
FROM
  table_3 AS table_4

