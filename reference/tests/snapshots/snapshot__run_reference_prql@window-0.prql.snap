SELECT
  orders.*,
  SUM(price) OVER (
    ORDER BY
      day ROWS BETWEEN 2 PRECEDING
      AND CURRENT ROW
  ) AS total_last_3_days,
  SUM(price) OVER (
    PARTITION BY order_month
    ORDER BY
      day ROWS BETWEEN UNBOUNDED PRECEDING
      AND CURRENT ROW
  ) AS monthly_running_total
FROM
  orders
